<h1>New Post</h1>
<div>
  <%= form_for @post, url: posts_path  do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %><br>

    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>

    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
